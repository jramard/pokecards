{
  "name": "pokecards",
  "version": "1.0.4",
  "description": "An Amazing Capacitor App",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "electron:start": "npm run build && electron ./",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build-windows": "npm run build && electron-builder build --windows",
    "electron:build-mac": "npm run build && electron-builder build --mac",
    "release": "electron-builder build --publish always",
    "success-build-message": "echo build successfull"
  },
  "repository": "https://github.com/jramard/pokecards",
  "dependencies": {
    "@capacitor-community/electron": "^1.3.1"
  },
  "devDependencies": {
    "electron": "~10.3.1",
    "electron-builder": "^22.9.1",
    "typescript": "~4.0.5"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "fr.namkin.ionicpoc",
    "productName": "IonicPOC",
    "files": [
      "assets/*",
      "build/*",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ],
    "linux": {
      "target": "appImage"
    },
    "appImage": {
      "license": "LICENSE"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "license": "LICENSE"
    },
    "publish": [
      {
        "provider": "github",
        "url": "https://github.com/jramard/pokecards.git"
      }
    ]
  }
}
